<div class="percent-listing">
  {{#if shouldDisplayPercentageVisual}}
    <input type="text" value="{{resultValue}}" class="dial" data-readOnly="true" data-width="80" data-height="80" data-thickness=".1" data-fgColor="#4B979D" data-inputColor="#444" data-font="Helvetica Neue, Roboto, Helvetica, Arial, sans-serif" data-font-weight="400">
  {{else}}
    <span class="percentage">{{resultValue}}<small>{{unit}}</small></span>
  {{/if}}
</div>
<div class="measure-type pull-left">
  <i class="{{#if episode_of_care}}fa fa-stethoscope{{else}}glyphicon glyphicon-user{{/if}}"></i>
</div>
<div class="fraction-listing pull-left">
  <div class="numerator">{{fractionTop}}</div>
  <div class="denominator">{{fractionBottom}}</div>
</div>
<div class="pop-chart pull-left"></div>

<button class="population-btn active" id="IPP">
  <span class="title">Initial Patient Pop.</span>
  <span class="query-result">{{ipp}}</span>
</button>
<button class="population-btn" id="NUMER">
  <span class="title">Numerator</span>
  <span class="query-result">{{numerator}}</span>
</button>
<button class="population-btn" id="DENOM">
  <span class="title">Denominator</span>
  <span class="query-result">{{denominator}}</span>
</button>
{{#if hasExclusions}}
<button class="population-btn" id="DENEX">
  <span class="title">Exclusions</span>
  <span class="query-result">{{exclusions}}</span>
</button>
{{/if}}
{{#if hasExceptions}}
<button class="population-btn" id="DENEXCEP">
  <span class="title">Exceptions</span>
  <span class="query-result">{{exceptions}}</span>
</button>
{{/if}}
{{#if hasOutliers}}
<button class="population-btn" id="antinumerator">
  <span class="title">Outliers</span>
  <span class="query-result">{{outliers}}</span>
</button>
{{/if}}
