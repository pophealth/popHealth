<script type="text/javascript">   
  $(document).ready(function(){
	var dates = new Array(PopHealth.currentUser.effectiveDateString(false), PopHealth.currentUser.effectiveDateString(true));
    $('.effective-date-picker').datepicker({orientation: "top right", format: "m/d/yyyy",});
    $('.effective-date-picker.start').val(dates[0]).datepicker("setDate", new Date(dates[0]));
    $('.effective-date-picker.end').val(dates[1]).datepicker("setDate", new Date(dates[1]));
  });
</script>

<div class="effective-date pull-right row-inline">
  <h5 class='effective-date-header'><b> Reporting Period:</b> 
    <input type="text" class="effective-date-picker start"/> &mdash; 
    <input type="text" class="effective-date-picker end"/> 
    <button class="effective-date-btn btn-primary"> <i class="glyphicon glyphicon-refresh"/></button>
  </h5>
</div> 
<h2>{{providerType}} {{providerExtension}} {{title}} {{given_name}} {{family_name}}</h2>

<h4>{{specialty}}</h4>
<h4>{{organization.name}}</h4>
<br>

<div class="row">
<div class="col-md-3">
  <dl class="dl-horizontal">
    <dt>Tax ID:</dt>
    {{#if tin}}
      <dd>{{tin}}</dd>
    {{else}}
      <dd>N/A</dd>
    {{/if}}
    <dt>Phone:</dt>
    {{#if phone}}
      <dd>{{phone}}</dd>
    {{else}}
      <dd>N/A</dd>
    {{/if}}
    <dt class="text-muted">Team:</dt>
    {{#if teamn.name}}
      <dd class="text-muted">{{team.name}}</dd>
    {{else}}
      <dd class="text-muted">N/A</dd>
    {{/if}}
    <dt class="text-muted">NPI:</dt>
    {{#if npi}}
      <dd class="text-muted">{{npi}}</dd>
    {{else}}
      <dd class="text-muted">N/A</dd>
    {{/if}}
  </dl>
</div>
<div class="col-md-9" id="providerChart"></div>
</div>

