<thead>
  <tr>
    <th class="pid">Provider NPI</th>
    <th> Provider Type </th>
    <th> Provider Extension </th>
    <th>Provider Name</th>
    <th>Tax ID</th>
    <th>Phone</th>
    <th>Team</th>
  </tr>
</thead>
{{#collection tag='tbody'}}
  <tr>
    <td>
      {{#link "providers/{{_id}}" expand-tokens=true}}{{npi}}{{/link}}
    </td>
    <td>{{providerType}}</td>
    <td>{{#link "providers/{{_id}}" expand-tokens=true}}{{providerExtension}}{{/link}}</td>
    <td>{{#link "providers/{{_id}}" expand-tokens=true}}{{given_name}} {{family_name}}{{/link}}</td>
    <td>{{tin}}</td>
    <td>{{phone}}</td>
    <td>{{team.name}}</td>
  </tr>
{{/collection}}
