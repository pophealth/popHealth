<div id="managePatients">
	<% unless @records.empty?%>
		<%= form_tag update_all_provider_patients_path(@provider), {method: 'put'} do %>
		<span id="providerPatients">
			<h2><%= @provider.full_name%>'s patients</h2>
			<div>
				<%= render partial: 'provider_patients' %>
			</div>
			<%= paginate @records, param_name: 'provider_page' %>
			 <%= submit_tag "Update", style: "float:right", class: "btn btn-info" %>
		</span>
		<% end %>
	<% end %>

	<br> <hr style="margin-top:20px" />

	<% unless @unassigned.empty? %>
		<%= form_tag update_all_provider_patients_path(@provider), {method: 'put'} do %>
		<h3>Unassigned Patients</h3>
		<span id="unassigned">
				<%= render partial: 'unassigned', param_name: 'unassigned_page' %>
					
				<%= paginate @unassigned %>
				<%= submit_tag "Assign Selected to #{@provider.full_name}", class: "btn btn-success", style: "float:right" %>
		</span>
		<% end %>
	<% end %>
	<br> </br> 
	<hr/>

	<br> </br>
</div>
