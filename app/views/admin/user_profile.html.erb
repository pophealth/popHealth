<script type='text/javascript'>
  $(document).ready(function() {
    $('#practice').change( function(){
      var userId = $(this).data("user");
      var practice = $(this).val();
      var confs = "Change user's assigned practice?";
      
      if ( confirm(confs) == true ){
        $.post('set_user_practice', {'user': userId, 'practice': practice}, function(d){
        });
      };     
    });
  });
</script>
<div class='main' >
  <h1>User Profile:  <strong><%= @user.full_name%> </strong></h1>
  
  <table class="table table-hover">
    <% if !APP_CONFIG['use_opml_structure'] %>
	  <tr>
		  <td> <h4> Practice: </h4> </td>
		  <td> <h4> <%= select_tag "practice", options_for_select(@practices, @practice), prompt: 'None', data: {user: @user.id.to_s} %> </h4> </td>
	  <tr>
    <% end %>
	  <tr>
		  <td> Username: </td>
		  <td> <%= @user.username %> </td>
	  <tr>

	  <tr>
		  <td> Email: </td>
		  <td> <%= @user.email %> </td>
	  <tr>

	  <tr>
		  <td> Organization: </td>
		  <td> <%= @user.company %> </td>
	  <tr>

	  <tr>
		  <td> Organization URL: </td>
		  <td> <%= @user.company_url %> </td>
	  <tr>

	  <tr>
		  <td> Registry Name: </td>
		  <td> <%= @user.registry_name %> </td>
	  <tr>

	  <tr>
		  <td> Registry ID: </td>
		  <td> <%= @user.registry_id %> </td>
	  <tr>

	  <tr>
		  <td> National Provider Id: </td>
		  <td> <%= @user.npi %> </td>
	  <tr>

	  <tr>
		  <td> Tax Identifier: </td>
		  <td> <%= @user.tin %> </td>
	  <tr>
  </table>		

  <%= link_to "Back to Users", "/admin/users", :class=>"btn btn-success" %>
</div>

